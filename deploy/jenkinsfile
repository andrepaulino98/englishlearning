pipeline {
    agent any
    stages {
        stage('Build Image') {
            steps {
               sh 'docker build -t englishlearning:${BUILD_NUMBER} .'
            }
        }
        stage('Tag Image'){
            steps {
                sh 'docker tag englishlearning:${BUILD_NUMBER}  andrepaulino/englishlearning:${BUILD_NUMBER}'
            }
        }
        stage('Subindo imagem para o reposit√≥rio DockerHub'){
            steps{
                sh 'docker push andrepaulino/englishlearning:${BUILD_NUMBER}'
            }
        }
    }
}