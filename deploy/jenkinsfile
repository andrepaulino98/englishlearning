pipeline {
    agent any
    stages {
        stage('Build Image') {
            steps {
               bat 'docker build -t englishlearning:${BuildNumber} .'
            }
        }
        stage('Tag Image'){
            steps {
                bat 'docker tag englishlearning:$(git rev-parse --short HEAD)  andrepaulino/englishlearning:$(git rev-parse --short HEAD)'
            }
        }
        stage('Subindo imagem para o repositÃ³rio DockerHub'){
            steps{
                bat 'docker push andrepaulino/englishlearning:$(git rev-parse --short HEAD)'
            }
        }
    }
}