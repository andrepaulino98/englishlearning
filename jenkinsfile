pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo "executando build"
            }
        }

        stage('Deploy em desenvolvimento') {
            when {
                branch 'develop'
            }
            steps {
                powershell '''
                        mkdir C:\\\\xampp\\\\htdocs\\\\englishlearning
                        cd "C:\\\\xampp\\\\htdocs\\\\englishlearning"
                        git init
                        git add remote git@github.com:andrepaulino98/englishlearning.git
                        git fetch
                        git checkout -f develop
                        git pull
               '''
            }
        }
        stage('deploy em homolog') {
            when {
                branch 'homolog'
            }
            steps {
               echo 'homolog'
            }
        }
        stage("deploy em producao"){
            when {
                branch 'master'
        }
            steps {
                echo "producao"
            }
        }
    }
}
