pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo "executando build"
            }
        }

        stage('Deploy em desenvolvimento') {
            when {
                branch 'develop'
            }
            steps {
               echo 'develop'
            }
        }
        stage('Deploy em homologação') {
            when {
                branch 'homolog'
            }
            steps {
               echo 'homolog'
            }
        }
        stage("deploy em produção"){
            when {
                branch 'master'
        }
            steps {
                echo "produção"
            }
        }
    }
}
