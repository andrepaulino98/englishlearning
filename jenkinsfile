pipeline {
    agent any

    stages {
        stage('checkout branch') {
            steps {
                script {
                    // Obt√©m o nome da branch atual
                    def branchName = env.BRANCH_NAME

                    // Verifica a branch atual e executa o git checkout correspondente
                    if (branchName == 'develop') {
                        gitCheckout('develop')
                    } else if (branchName == 'homolog') {
                        gitCheckout('homolog')
                    } else {
                        gitCheckout('master')
                    }
                }
            }
        }
    }
}

def gitCheckout(branch) {
    // Executa o comando git checkout -f <branch>
    sh "git checkout -f ${branch}"
}




